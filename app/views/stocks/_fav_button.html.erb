<% if current_user.currentfav?(micropost) %> 
  <%= form_for(current_user.stocks.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :micropost_id, micropost.id %>

    <%= f.submit 'Unfav', class: 'btn btn-danger btn-block' %>
  <% end %>

<% else %>

  <%= form_for(current_user.stocks.build) do |f| %>
  <!-- user_idという名前でcurrent_user.idをパラメータをわたしている。-->
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :micropost_id, micropost.id %>

    <%= f.submit 'Fav', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>